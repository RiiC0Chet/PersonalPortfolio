<h1>Educations</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Avatar</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @educations.each do |education| %>
      <tr>
        <td><%= education.title %></td>
        <td><%= education.description %></td>
        <td>
          <% if education.avatar.attached? %>
            <%= image_tag education.avatar, size: "50x50" %>
          <% end %>
        </td>
        <td><%= link_to 'Show', education %></td>
        <td><%= link_to 'Edit', edit_education_path(education) %></td>
        <td><%= button_to('Destroy', education, method: :delete, data: { confirm: 'Are you sure?' }) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Education', new_education_path %>